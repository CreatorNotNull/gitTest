<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 开启二级缓存 -->
	<settings>
		<setting name="cacheEnabled" value="true"/>
	</settings>
    <!-- 
    environments default="development":表示的是项目在运行的时候所需要的环境
    default：有两个值，1：development 开发者模式      2：work : 工作模式
     -->
	<environments default="development">
		<environment id="development">
		    <!-- JDBC:表示的是采用了JDBC中事务提交和回滚的方式来进行管理。默认情况下，事务自动提交是被关闭掉的。
		    	MANAGED:我自身框架是不会进行事务的管理，这个事务管理会交给容器来进行关系。？？？？？？
		     -->
			<transactionManager type="JDBC" />
		<!-- 数据源的配置 
			POOLED：当前使用数据库连接池来提提高用户请求数据库的效率。
			UNPOOLED：不使用数据库连接池。
		-->
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://localhost:3306/taobao" />
				<property name="username" value="root" />
				<property name="password" value="123456" />
			</dataSource>
		</environment>
	</environments>
	<!-- 添加映射文件的注册 -->
	<mappers>
	    <mapper resource="cn/yueqian/com/dao/UserDaoMapper.xml"/>
	    <mapper resource="cn/yueqian/com/dao/DeptDaoMapper.xml"/>
	    <mapper resource="cn/yueqian/com/dao/EmpDaoMapper.xml"/>	    
	    <mapper resource="cn/yueqian/com/dao/PersonDaoMapper.xml"/>
	     <mapper resource="cn/yueqian/com/dao/CardDaoMapper.xml"/>
	     <mapper resource="cn/yueqian/com/dao/StudentDaoMapper.xml"/>
	     <mapper resource="cn/yueqian/com/dao/TeacherDaoMapper.xml"/>
	     <mapper resource="cn/yueqian/com/dao/CategoryDaoMapper.xml"/>
	</mappers>
</configuration>